# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# ========== App Configuration ==========
DEVELOPMENT_ENV="development"
PORT=3000  # Replace with your actual port number

# ========== Database ==========
DATABASE_URL="postgresql://user:password@localhost:5432/dbName?schema=public"

# ========== JWT Tokens ==========
ACCESS_TOKEN_SECRET="your_64_bit_access_token_secret"
ACCESS_TOKEN_EXPIRE_IN="15m"  # Example: 15m, 1h, 7d
REFRESH_TOKEN_SECRET="your_64_bit_refresh_token_secret"
REFRESH_TOKEN_EXPIRE_IN="7d"  # Adjust based on your session policy

# ========== Password Security ==========
SALT_ROUNDS=10  # Recommended: 10-12 for production

# ========== Password Reset ==========
REST_PASSWORD_TOKEN_SECRET="your_64_bit_reset_token_secret"
REST_PASSWORD_TOKEN_EXPIRE_IN="10m"  # Example: 10 minutes
RESET_PASSWORD_FRONTEND_LINK="https://yourfrontend.com/reset-password"

# ========== Email Configuration ==========
NODE_MAILER_EMAIL="your_email@example.com"  # Email address used to send reset links
NODE_MAILER_PASSWORD="your_email_app_password"  # App-specific password
